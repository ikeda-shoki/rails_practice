<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto bg-light py-3 mt-5 rounded">
      <h2 class="bg-info text-white p-2 rounded">Sign up<i class="fas fa-user-plus ml-2"></i></h2>
      
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="fiedl">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, class: "w-100" %>
        </div>
      
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %>
        </div>
      
        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "w-100" %>
        </div>
      
        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100" %>
        </div>
      
        <div class="actions mt-5 mb-3">
          <%= f.submit "Sign up", class: "btn btn-info w-100" %>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
      
    </div>
  </div>
</div>
